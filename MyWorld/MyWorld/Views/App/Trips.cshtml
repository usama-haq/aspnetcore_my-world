@model IEnumerable<MyWorld.Models.Trip>
@{
    ViewBag.Title = "Home Page";
}
@section angularScripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/simpleControls.js"></script>
    <script src="~/js/tripsController.js"></script>
}

<div class="row" ng-app="app-trips">

    <div class="col-md-6 col-md-offset-3" ng-controller="tripsController as vm">
        <!-- Angular Controller Managed Section : Start -->
        <table class="table table-responsive table-striped">
            <tbody>
                <tr ng-repeat="trip in vm.trips">
                    <td>{{ trip.name }}</td>
                    <td>{{ trip.created | date:'MM-dd-yyyy'}}</td>
                    <td><a href="#" class="btn btn-sm btn-primary ">Manage</a></td>
                </tr>
            </tbody>
        </table>

        <!-- Angular Controller Managed Section : End -->
    </div>

    <div class="col-md-6">
        <h1>Your Trips</h1>
        <p>This will be a fun website soon!</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success" /></div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>The Map</h2>

        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name : @item.DateCreated.ToString("d")</li>
            }
        </ul>
    </div>
</div>